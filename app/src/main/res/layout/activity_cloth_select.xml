<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.ClothSelectActivity"
    android:background="@android:color/white">



    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/active_dots"
        android:id="@+id/tablayout_cloth_select" />

    <View
        android:layout_below="@id/tablayout_cloth_select"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/hr"
        android:background="@color/blue_navy"
        >
    </View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@id/hr"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:weightSum="9"
        android:id="@+id/linear_layout_heading">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Items"
            android:textColor="@color/blue_navy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Price"
            android:textColor="@color/blue_navy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Quantity"
            android:textColor="@color/blue_navy"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center" />

    </LinearLayout>

    <View
        android:layout_below="@+id/linear_layout_heading"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/hr2"
        android:background="@color/blue_navy"
        >
    </View>


    <androidx.viewpager.widget.ViewPager
        android:layout_below="@id/hr2"
        android:id="@+id/cloth_pager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="69dp"
        android:layout_marginBottom="65dp">


    </androidx.viewpager.widget.ViewPager>

    <View
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha=".5"
        android:background="@android:color/darker_gray"
        />

    <Button
        android:layout_marginLeft="320dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:id="@+id/next_ClothSelectId"
        android:outlineProvider="none"
        android:text="Next"
        android:textColor="@android:color/holo_blue_dark"/>

    <Button
        android:layout_marginLeft="220dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:id="@+id/addToCart_ClothSelectId"
        android:outlineProvider="none"
        android:textColor="@android:color/holo_blue_dark"/>


    <TextView
        android:id="@+id/amount_wash_fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total:0$"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/quantity_wash_fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Items"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:layout_marginLeft="110dp"
        android:textSize="18sp"/>

</RelativeLayout>