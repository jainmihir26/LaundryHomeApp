<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.Fragments.HomeFragment"
    >
    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:weightSum="10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:weightSum="2"
            >

            <TextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:text="Hello"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:id="@+id/homeFragment_helloTextId"
                android:textSize="35sp"
                android:textColor="@color/black"
                android:text="Aman"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homeFragment_helloTextId"
                android:text="Choose the laundry service,which you are intrested in today"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="2dp"
                android:textAlignment="textStart"
                android:paddingBottom="1dp"
                android:layout_marginStart="2dp"
                android:gravity="start" />
        </LinearLayout>

        <GridView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.8"
            android:elevation="5dp"
            android:id="@+id/home_gridViewId"
            android:numColumns="2"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:horizontalSpacing="2dp"
            android:verticalSpacing="40dp"
            android:layout_marginTop="4dp"
            >
        </GridView>


    </LinearLayout>


</FrameLayout>