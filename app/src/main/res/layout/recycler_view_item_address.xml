<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:weightSum="10"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.9"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:layout_marginTop="40dp"
                android:id="@+id/select_address_recycler_view_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="select address" />

            <Button
                android:id="@+id/delete_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Delete address "
                android:layout_marginTop="10dp"
                android:background="@color/quantum_googred"
                android:layout_gravity="bottom"/>

        </LinearLayout>

            <TextView
                android:id="@+id/address_recyler_view_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="A-209 NIRMAN AJINKYATARA NEAR RAJGAD BOYS HOSTEL SINHGAD INSTITUTE PUNE MAHARASHTRA 411041"
                android:textSize="20sp" />
    </LinearLayout>

    <View android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:background="@color/blue_navy"
        />

</LinearLayout>