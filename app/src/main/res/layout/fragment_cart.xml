<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/your_cloth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Clothes"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_above="@+id/add_more_textView"
            android:layout_marginTop="10dp"
            android:id="@+id/recycler_view_fragment_cart"
            android:layout_below="@+id/your_cloth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_marginLeft="10dp"
           android:layout_above="@+id/LinearLayoutPay"
            android:id="@+id/add_more_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add More"
            android:textColor="@color/active_dots"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>




        <LinearLayout

            android:layout_above="@+id/place_order_button"
            android:id="@+id/LinearLayoutPay"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="Payable Amount"
            android:textColor="@color/black"/>

            <TextView
                android:id="@+id/total_amount_textView"
                android:layout_marginLeft="130dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="210$"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@color/black"/>


        </LinearLayout>

        <Button
            android:id="@+id/place_order_button"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Place Order"
            android:background="@color/active_dots"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"/>




</RelativeLayout>