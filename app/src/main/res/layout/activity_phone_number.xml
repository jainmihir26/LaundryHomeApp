<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.PhoneNumberActivity"
    android:orientation="vertical"
    >

    <EditText android:layout_height="60dp"
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:id="@+id/phoneNumberId"
        android:hint="Enter  Mobile Number"
        android:inputType="phone"
        android:maxLength="10"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <Button android:layout_height="80dp"
        android:layout_width="match_parent"
        android:id="@+id/buttonProceedId"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Proceed"
        android:textColor="@color/blue_navy"
        />

</LinearLayout>