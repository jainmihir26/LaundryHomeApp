<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ApplyPromotionActivity">
    <TextView android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:id="@+id/applyPromotion_applyPromotionId"
        android:text="COUPON/CREDITS"
        android:textColor="@color/blue_navy"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/recyclerView_applyPromotion"
        android:layout_below="@+id/applyPromotion_applyPromotionId"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />


</RelativeLayout>